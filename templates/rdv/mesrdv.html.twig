{% extends 'base.html.twig' %}

{% block title %}Hello RdvController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Mes rendez vous à venir</h1>
    <ul>
        {% for r in rdvs %}
        {% if r.creneau >= now %}
            <li> {{r.creneau | date('d/m/y') }} avec {{r.medecin.nom}} </li>
            <p><a href="{{ path('app_supprdv',{'id': r.id})}}">Supprimer rdv</a>
            {# <button type='button' oncclick="supprdv();"> Supprimer un rdv </button> #}
            {% endif %}
        {% endfor %}
    </ul>

      <h1>Mes rendez vous passé</h1>
    <ul>
        {% for r in rdvs %}
        {% if r.creneau <= now %}
            <li> {{r.creneau | date('d/m/y') }} avec {{r.medecin.nom}} </li>
            {% endif %}
        {% endfor %}
    </ul>
</div>
{% endblock %}
